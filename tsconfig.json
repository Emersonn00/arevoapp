{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "jsx": "react-jsx",
    "types": ["react", "react-native", "react/jsx-runtime"],
    "paths": {
      "@/*": ["./app/_src/*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ],
  "exclude": [
    "arevosite/**",
    "supabase/**"
  ]
}
